{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "indentation": [4],
        "selector-class-pattern": [
            "^[a-z][a-zA-Z0-9]+$",
            {
              "message": "selector class pattern name to be lower Camel Case"
            }
          ],
          "max-line-length": 100
    }
}